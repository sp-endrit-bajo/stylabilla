{
  "author": "@usabilla",
  "name": "@usabilla/stylabilla",
  "version": "0.0.0-development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:usabilla/stylabilla.git"
  },
  "description": "Usabilla's CSS styleguide.",
  "main": "dist/stylabilla.css",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "NODE_ENV=production webpack",
    "lint": "stylelint \"src/**/*.scss\"",
    "lint:fix": "stylelint \"src/**/*.scss\" --fix",
    "deploy": "./scripts/deploy.sh",
    "prepare": "yarn build",
    "test:accessibility": "node ./scripts/pa11y.js --ignore 'notice'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "bugs": {
    "url": "https://github.com/usabilla/stylabilla/issues"
  },
  "dependencies": {
    "autoprefixer": "^7.0.1",
    "babel-core": "^6.9.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.9.0",
    "condition-circle": "^1.5.0",
    "conventional-commit-types": "^2.2.0",
    "css-loader": "^0.28.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "git-hooks": "^1.1.8",
    "node-sass": "^4.1.0",
    "postcss-loader": "^2.0.3",
    "s3-deploy": "^0.7.5",
    "sanitize.css": "^5.0.0",
    "sass-loader": "^6.0.3",
    "semantic-release": "^6.3.6",
    "style-loader": "^0.18.1",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "validate-commit-msg": "2.9.0",
    "webpack": "^2.5.1"
  },
  "devDependencies": {
    "chalk": "^2.1.0",
    "file-loader": "^0.11.2",
    "findup": "^0.1.5",
    "glob": "^7.1.2",
    "husky": "^0.14.1",
    "kss": "^3.0.0-beta.18",
    "kss-loader": "^0.3.2",
    "lint-staged": "^4.0.0",
    "minimist": "^1.2.0",
    "pa11y": "^4.11.0",
    "stylelint-webpack-plugin": "^0.8.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-dev-server": "^2.5.0",
    "winston": "^2.3.1"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 72
    }
  }
}
